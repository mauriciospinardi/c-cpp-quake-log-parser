{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "--build-debug",
         "type": "shell",
         "command": "& bash -c \"make CFG_NAME=debug\" & exit",
         "group": "build"
      },
      {
        "label": "--build-release",
        "type": "shell",
        "command": "& bash -c \"make\" & exit",
        "group": "build"
      },
      {
         "label": "--clean-all",
         "type": "shell",
         "command": "& bash -c \"make clean\" & exit",
         "group": "build"
      },
      {
         "label": "--rebuild-debug",
         "type": "shell",
         "command": "& bash -c \"make -B CFG_NAME=debug\" & exit",
         "group": "build"
      },
      {
        "label": "--rebuild-release",
        "type": "shell",
        "command": "& bash -c \"make -B\" & exit",
        "group": "build"
      },
      {
        "label": "--run-unit-tests",
        "type": "shell",
        "command": "& bash -c \"make -B CFG_NAME=tests\" && .\\bin\\tests\\libqlp-unit-tests.exe & exit",
        "group": "test"
      }
   ],
   "problemMatcher": {
      "owner": "cpp",
      "fileLocation": [
         "relative",
         "${workspaceFolder}"
      ],
      "pattern": {
         "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
         "file": 1,
         "line": 2,
         "column": 3,
         "severity": 4,
         "message": 5
      }
   }
}
